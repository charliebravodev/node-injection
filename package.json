{
  "name": "@hashstack/node-injection",
  "version": "1.2.0-dev",
  "description": "Decorator based dependency / service injection for NodeJS and TypeScript inspired from Angular and Spring.",
  "keywords": [
    "node",
    "dependency",
    "injection",
    "service",
    "component",
    "container",
    "javascript",
    "typescript",
    "angular",
    "spring"
  ],
  "repository": "https://github.com/charliebravodev/node-injection",
  "main": "./dist/node-injection.js",
  "types": "./dist/node-injection.d.ts",
  "typescript": {
    "definition": "./dist/node-injection.d.ts"
  },
  "scripts": {
    "test": "nyc mocha",
    "test:watch": "mocha --watch",
    "lint": "tslint -c tslint.json \"src/**/*.ts\" -e \"**/**/*.spec.ts\" && tslint -c tslint-test.json \"src/**/*.spec.ts\" && tslint -c tslint-test.json \"test/**/*.ts\"",
    "build": "export DTS=true && webpack",
    "build:watch": "webpack --watch ",
    "ci": "npm run build && npm run test && npm run lint"
  },
  "author": "Geoffroy Empain",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "reflect-metadata": "0.1.10",
    "@types/chai": "4.0.4",
    "@types/mocha": "2.2.44",
    "@types/node": "8.0.28",
    "@types/reflect-metadata": "0.0.5",
    "@types/sinon": "^2.3.7",
    "@types/sinon-chai": "^2.7.29",
    "chai": "4.1.2",
    "dts-bundle": "0.7.3",
    "es6-shim": "0.35.3",
    "mocha": "4.0.1",
    "nyc": "11.2.1",
    "remove-empty-directories": "0.0.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.1.2",
    "sinon-chai": "^2.14.0",
    "ts-loader": "3.1.1",
    "ts-node": "3.3.0",
    "tslint": "5.7.0",
    "typescript": "2.5.2",
    "webpack": "3.1.0",
    "webpack-node-externals": "^1.6.0"
  },
  "files": [
    "dist"
  ],
  "exclude": [
    "node_modules",
    "test",
    "**/*.spec.ts"
  ],
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "src/**/*..spec.ts",
      "src/**/*..spec.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "json"
    ],
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./coverage"
  }
}
