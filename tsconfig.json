{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"sourceMap": true,
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es6"
		]
	},
	"exclude": [
		"node_modules"
	],
	"compileOnSave": false,
	"buildOnSave": false
}
